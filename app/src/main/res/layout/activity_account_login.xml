<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.AccountLoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/green">

        <ImageView
            android:id="@+id/floor"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/logo_upkeep" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="11dp"
        android:layout_below="@+id/floor"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to UpKeep"
                android:fontFamily="@font/red_hat"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"/>

            <Button
                android:id="@+id/googleSignInBtn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@color/red"
                android:text="Sign in with Google+"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:letterSpacing="0"
                android:textSize="16sp"
                android:drawableLeft="@drawable/google_smaller"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp" />

            <Button
                android:id="@+id/fbSignInBtn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="@color/blue"
                android:text="Login with Facebook"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:letterSpacing="0"
                android:drawableLeft="@drawable/facebook_smaller"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="12dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dashed_line"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btnEmail"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Email"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:fontFamily="@font/red_hat"
                android:letterSpacing="0"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="@color/grey"/>

        </LinearLayout>


       </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>