<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical"
    tools:context=".activity_tenant.GetStartedTenantActivity">

    <ImageView
        android:id="@+id/imgBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/ic_back_arrow" />

    <ImageView
        android:id="@+id/floor"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_upkeep" />


    <TextView
        android:id="@+id/textGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/floor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/red_hat"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <RelativeLayout
        android:id="@+id/connectLandlord"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/textGetStarted"
        android:layout_marginTop="40dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/homeImg"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:src="@drawable/manage_tenants_drawer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/homeImg"
            android:fontFamily="@font/red_hat"
            android:text="Connect With Landlord"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_add" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/banking"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/connectLandlord"
        android:layout_marginTop="15dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/dollar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/dollar_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dollar"
            android:drawablePadding="20dp"
            android:fontFamily="@font/red_hat"
            android:text="Payment Setup"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_add" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/termsConditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/btnCompleteTenant"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/red_hat"
            android:text="I ACCEPT TO THE "
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/red_hat"
            android:text="Terms n conditions"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCompleteTenant"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#459A26"
        android:fontFamily="@font/red_hat"
        android:letterSpacing="0"
        android:text="Complete"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp" />



</RelativeLayout>